{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-console": "warn",
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/no-explicit-any": "warn",
    "no-alert": "error",
    "no-restricted-globals": ["error", "confirm"],
    "max-lines": ["error", {
      "max": 300,
      "skipComments": true,
      "skipBlankLines": true
    }],
    "complexity": ["error", { "max": 8 }]
  }
}
