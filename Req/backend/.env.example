# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL="file:./dev.db"

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AI Content Generation Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Vector Database Configuration
VECTOR_DB_PROVIDER=local
VECTOR_DB_API_KEY=your-vector-db-api-key
VECTOR_DB_ENVIRONMENT=us-east1-gcp
VECTOR_DB_INDEX_NAME=ai-content-similarity
VECTOR_DB_DIMENSION=1536
VECTOR_DB_METRIC=cosine
VECTOR_DB_NAMESPACE=content

# Pinecone Configuration (if using Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX_NAME=ai-content-similarity
PINECONE_NAMESPACE=content

# Weaviate Configuration (if using Weaviate)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key
WEAVIATE_CLASS_NAME=AIContent
WEAVIATE_VECTORIZER=text2vec-openai

# Local Vector Storage Configuration
LOCAL_VECTOR_STORAGE_PATH=./data/vectors
